@model MvcPhotoGallery.Models.PhotoGallery

@{ ViewData["Title"] = "Edit"; }

<h1>Edit</h1>

<h4>PhotoGallery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <!-- Button trigger modal -->
    <button type="button" id="upload-image" class="btn btn-primary" data-url="@Url.Action("Create", "Images", new { PhotogalleryId = @ViewBag.galleryId })" data-target="#modal-container" data-toggle="modal">Add Image</button>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-container" name="modal-container" tabindex="-1" role="dialog" aria-labelledby="insert-image" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
